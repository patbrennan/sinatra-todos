<section id="todos">
  <header>
    <h2>Editing "<%= @list[:name] %>"</h2>
    <ul>
      <li>
        <form action="/delete/<%= params[:id] %>" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/edit/<%= params[:id] %>" method="post">
  <dl>
    <dt>
      <label for="new_name">Enter the new name for your list:</label>
    </dt>
    <dd>
      <input name="new_name" placeholder="List Name" type="text" value="<%= params[:new_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:id] %>">Cancel</a>
  </fieldset>
</form>